
<main class="main-content">
    <div class="block">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb bg-white">
                            <li class="breadcrumb-item"><a href="index.html">Tableau de bord</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Nouveau membre</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-12">
                    <div class="departmentDesc">
                        <h1>Nouveau membre</h1>
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-12">
                    <div class="simple-card">
                        <div class="simple-card__content">
                            <form action="#" method="post" class="formular">
                                <div class="form-row">
                                    <div class="form-group col-md-6 mb-5">
                                        <label for="MemberName">Nom</label>
                                        <input type="text" class="form-control" id="MemberName" name="MemberName">
                                    </div>
                                    <div class="form-group col-md-6 mb-5">
                                        <label for="MemberPnom">Prénoms</label>
                                        <input type="text" class="form-control" id="MemberPnom" name="MemberPnom">
                                    </div>
                                </div>
                                <div class="form__group">
                                    <div class="form__radio-group">
                                        <input type="radio" class="form__radio-input" id="homme" name="MemberSex" value="Masculin">
                                        <label for="homme" class="form__radio-label">
                                            <span class="form__radio-button"></span>
                                            Masculin
                                        </label>
                                    </div>

                                    <div class="form__radio-group">
                                        <input type="radio" class="form__radio-input" id="femme" name="MemberSex" value="Feminin">
                                        <label for="femme" class="form__radio-label">
                                            <span class="form__radio-button"></span>
                                            Féminin
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group mb-5">
                                    <label for="exampleFormControlTextarea1">Description</label>
                                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="5" name="MemberDescription"></textarea>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6 mb-5">
                                        <label for="date">Date de naissance</label>
                                        <input type="date" class="form-control" id="date" name="MemberNaissance">
                                    </div>
                                    <div class="form-group col-md-6 mb-5">
                                        <label for="place">Lieu de naissance</label>
                                        <input type="text" class="form-control" id="place" name="MemberLieuNaissance">
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6 mb-5">
                                        <label for="email">Email</label>
                                        <input type="email" class="form-control" id="email" name="MemberMail">
                                    </div>
                                    <div class="form-group col-md-6 mb-5">
                                        <label for="tel">Téléphone</label>
                                        <input type="text" class="form-control" id="tel" name="MemberPhone">
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6 mb-5">
                                        <label for="com">Commune d'habitation</label>
                                        <select id="com" class="form-control" name="MemberCommune">
                                            <option selected>Cocody</option>
                                            <option>...</option>
                                        </select>
                                    </div>
                                    <div class="form-group col-md-6 mb-5">
                                        <label for="tierk">Quartier de résidence</label>
                                        <input type="text" class="form-control" id="tierk" name="MemberQuartier">
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6 mb-5">
                                        <label for="TranportName">Transport utilise</label>
                                        <select class="form-control" id="TranportName" name="TranportName">
                                            <option>Bus</option>
                                            <option>Taxi Communal</option>
                                            <option>Bateau</option>
                                            <option>Vehicule Personnel</option>
                                            <option>Compteur</option>
                                        </select>
                                    </div>

                                    <div class="form-group col-md-6 mb-5">
                                        <label for="SpecialiteName">Transport</label>
                                        <select name="SpecialiteName" id="SpecialiteName" class="form-control">
                                        @foreach (var item in ViewBag.SpecialiteList)
                                        {
                                            <option value="@item.SpecialiteName">@item.SpecialiteName</option>
                                        }
                                        </select>
                                    </div>
                                </div>
                                <button type="submit" class="btn-green" >
                                    Enregistrer
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>