@model FinalCaimanProject.VM.SpecialitieVM

<main class="main-content">
    <div class="block">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb bg-white">
                            <li class="breadcrumb-item"><a href="@Url.Action("Departement","Departement")">Contact</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Nouveau contact</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-12">
                    <div class="departmentDesc">
                        <h1>Nouvelle spécialité</h1>
                    </div>
                </div>
            </div>

            @*Message de confirmation*@
                    <h1 class="modal-dialog text-center" style="color:lawngreen">@ViewBag.Message</h1>

            <div class="row">
                <div class="col-12">
                    <div class="simple-card">
                        <div class="simple-card__content">
                                @using(Html.BeginForm("Ajouter", "Departement", FormMethod.Post, new { enctype = "multipart/form-data", @class ="formular" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="form-row">
                                        <div class="form-group col-md-6 mb-5">
                                            @Html.LabelFor(m=>m.SpecialiteName)
                                            @Html.TextBoxFor(m=>m.SpecialiteName, new { @class="form-control", required = "required"})
                                            @Html.ValidationMessageFor(m=>m.SpecialiteName, "", new { @class="text-danger"})
                                            
                                        </div>
                                        <div class="form-group col-md-6 mb-5">
                                            @Html.LabelFor(m => m.SpecialiteColor)
                                            @Html.TextBoxFor(m => m.SpecialiteColor, new { @class = "form-control", required = "required", type="color" })
                                            @Html.ValidationMessageFor(m => m.SpecialiteColor, "", new { @class = "text-danger", @placeholder = "Nom en Anglais" })
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6 mb-5">
                                            @Html.LabelFor(m => m.SpecialiteInfo)
                                            @Html.TextAreaFor(m => m.SpecialiteInfo, new { @class = "form-control", required = "required" })
                                            @Html.ValidationMessageFor(m => m.SpecialiteInfo, "", new { @class = "text-danger"})
                                        </div>
                                        <div class="form-group col-md-6 mb-5">
                                            @Html.LabelFor(m => m.ImageSpecialité)
                                            <input type="file" class="form-control" id="ImageSpecialité" name="ImageSpecialité" required>
                                            @Html.ValidationMessageFor(m => m.ImageSpecialité, "", new { @class = "text-danger", @placeholder = "Nom en Anglais" })
                                        </div>
                                    </div>
                                    <button type="submit" class="btn-green">
                                        Enregistrer
                                    </button>
                                }
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</main>
