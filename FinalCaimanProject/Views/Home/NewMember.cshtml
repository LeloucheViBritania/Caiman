@model FinalCaimanProject.Models.Member
<main class="main-content">
    <div class="block">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb bg-white">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Tableau de bord</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Nouveau membre</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-12">
                    <div class="departmentDesc">
                        <h1>Nouveau membre</h1>
                    </div>
                </div>
            </div>

            @*Message de confirmation*@
            <h1 class="modal-dialog text-center" style="color:lawngreen">@ViewBag.Message</h1>

            <div class="row">
                <div class="col-12">
                    <div class="simple-card">
                        <div class="simple-card__content">
                            <form action="#" method="post" id="memberForm" class="formular" data-toggle="validator">
                                @Html.AntiForgeryToken()
                                <div class="form-row">
                                    <div class="form-group col-md-6 mb-5">
                                        <label for="MemberName">Nom</label>
                                        <input type="text" class="form-control" id="MemberName" name="MemberName" required>
                                    </div>
                                    <div class="form-group col-md-6 mb-5">
                                        <label for="MemberPnom">Prénoms</label>
                                        <input type="text" class="form-control" id="MemberPnom" name="MemberPnom" required>
                                    </div>
                                </div>
                                <div class="form__group">
                                    <div class="form__radio-group">
                                        <input type="radio" class="form__radio-input" id="homme" name="MemberSex" value="Masculin" required>
                                        <label for="homme" class="form__radio-label">
                                            <span class="form__radio-button"></span>
                                            Masculin
                                        </label>
                                    </div>

                                    <div class="form__radio-group">
                                        <input type="radio" class="form__radio-input" id="femme" name="MemberSex" value="Feminin" required>
                                        <label for="femme" class="form__radio-label">
                                            <span class="form__radio-button"></span>
                                            Féminin
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group mb-5">
                                    <label for="MemberDescription">Description</label>
                                    <textarea class="form-control" id="MemberDescription" rows="5" name="MemberDescription"></textarea>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6 mb-5">
                                        <label for="date">Date de naissance</label>
                                        <input type="date" class="form-control" id="date" name="MemberNaissance">
                                    </div>
                                    <div class="form-group col-md-6 mb-5">
                                        <label for="MemberLieuNaissance">Lieu de naissance</label>
                                        <input type="text" class="form-control" id="MemberLieuNaissance" name="MemberLieuNaissance" required>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6 mb-5">
                                        <label for="MemberMail">Email</label>
                                        <input type="email" class="form-control" id="MemberMail" name="MemberMail" required>
                                    </div>
                                    <div class="form-group col-md-6 mb-5">
                                        <label for="MemberPhone">Téléphone</label>
                                        <input type="text" class="form-control" id="MemberPhone" name="MemberPhone" required>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6 mb-5">
                                        <label for="MemberCommune">Commune d'habitation</label>
                                        <input type="text" class="form-control" id="MemberCommune" name="MemberCommune">
                                    </div>
                                    <div class="form-group col-md-6 mb-5">
                                        <label for="MemberQuartier">Quartier de résidence</label>
                                        <input type="text" class="form-control" id="MemberQuartier" name="MemberQuartier">
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6 mb-5">
                                        <label for="TranportName">Transport utilise</label>
                                        <select class="form-control" id="TranportName" name="TranportName">
                                            <option>Bus</option>
                                            <option>Taxi Communal</option>
                                            <option>Bateau</option>
                                            <option>Vehicule Personnel</option>
                                            <option>Compteur</option>
                                        </select>
                                    </div>

                                    <div class="form-group col-md-6 mb-5">
                                        <label for="SpecialiteName">Spécialités</label>
                                        <select name="SpecialiteName" id="SpecialiteName" class="form-control" required>
                                            @foreach (var item in ViewBag.SpecialiteList)
                                            {
                                                <option value="@item.SpecialiteName">@item.SpecialiteName</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <button type="submit" class="btn-green">
                                    Enregistrer
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>